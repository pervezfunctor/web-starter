{
  "name": "web-starter",
  "version": "1.0.0",
  "description": "Simple Web Starter for Javascript, Typescript or React",
  "main": "index.js",
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build index.html",
    "test": "jest",
    "clean:dist": "rimraf dist .cache",
    "clean:pkg": "rimraf node_modules yarn.lock",
    "clean": "yarn clean:dist && yarn clean:pkg",
    "refresh": "yarn clean && yarn",
    "lint:ts:cmd": "tslint -p tsconfig.json -c tslint.json",
    "lint:ts": "yarn lint:ts:cmd 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:js": "eslint src/**/*.js",
    "lint": "yarn lint:js && yarn lint:ts",
    "validate:types": "tsc --noEmit -p .",
    "fix": "yarn lint:js --fix && yarn lint:ts --fix",
    "validate": "yarn validate:types && yarn fix"
  },
  "keywords": [
    "starter"
  ],
  "author": "Pervez Iqbal",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@fortawesome/fontawesome-free": "^5.6.3",
    "@types/chance": "^1.0.1",
    "@types/jest": "^23.3.12",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-router": "^4.4.3",
    "@types/react-router-dom": "^4.3.1",
    "@types/yup": "^0.26.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-macros": "^2.4.5",
    "babel-plugin-root-import": "^6.1.0",
    "chance": "^1.0.18",
    "cypress": "^3.1.4",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.4.0",
    "eslint-plugin-jest": "^22.1.3",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "parcel-bundler": "^1.11.0",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "prettier": "^1.15.3",
    "react-testing-library": "^5.4.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bulma": "^0.7.2",
    "bulma-extensions": "^4.0.1",
    "date-fns": "^1.30.1",
    "formik": "^1.4.2",
    "immer": "^1.10.5",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "react-router-dom": "^4.3.1",
    "rxjs": "^6.3.3",
    "tcomb": "^3.2.29",
    "ulid": "^2.3.0",
    "use-immer": "^0.1.0",
    "yup": "^0.26.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:ts:cmd --fix",
      "yarn prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "yarn eslint --fix",
      "yarn prettier --write",
      "git add"
    ],
    "src/**/*.{json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
